{
  "name": "mtgedh",
  "version": "0.1.0",
  "description": "Magic: The Gathering multiplayer platform with rules automation",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "shared",
    "rules-engine"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "playwright": "^1.55.1"
  }
}
