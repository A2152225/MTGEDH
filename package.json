{
  "name": "mtgedh",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/server",
    "packages/client",
    "packages/shared",
    "packages/rules-engine"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=@mtgedh/server\" \"npm run dev --workspace=@mtgedh/client\"",
    "build": "npm run build --workspace=@mtgedh/shared && npm run build --workspace=@mtgedh/rules-engine && concurrently \"npm run build --workspace=@mtgedh/server\" \"npm run build --workspace=@mtgedh/client\"",
    "test": "concurrently \"npm run test --workspace=@mtgedh/server\" \"npm run test --workspace=@mtgedh/client\"",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "typescript": "^5.0.0"
  }
}
