{
  "name": "mtgedh",
  "version": "0.1.0",
  "description": "Magic: The Gathering multiplayer platform with rules automation",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "shared",
    "rules-engine"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "typecheck": "npm run typecheck --workspace=server --workspace=client --workspace=shared --workspace=rules-engine",
    "typecheck:rules-engine": "npm run typecheck --workspace=rules-engine",
    "test:server": "npx vitest run server/tests",
    "test:server:watch": "npx vitest server/tests",
    "lint": "node -e \"console.error('No lint configured. Use npm run typecheck or npm test.'); process.exit(1)\""
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "concurrently": "^8.2.2",
    "stream-chain": "^3.4.0",
    "stream-json": "^1.9.1",
    "typescript": "^5.3.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "playwright": "^1.55.1"
  }
}
